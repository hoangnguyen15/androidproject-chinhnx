<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/delete_app_root"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingRight="0px"
	android:paddingBottom="0px"
	android:background="@drawable/bgpopup">	
	<TextView
	android:id="@+id/txtdelete_app_ask"
	android:layout_marginLeft="20px"
	android:layout_marginTop="15px"
	android:textSize="8pt"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textColor="#f1de9a"
	android:text="Bạn có muốn xóa cuộc hẹn này không??"	
	/>	
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal"
	android:layout_marginTop="30px">
	<Button 
		android:id="@+id/bt_delete_app_set"	
		android:layout_marginLeft="8px"
		android:text="Có"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#84251f"	
		android:background="@drawable/button_dialog1"	
	/>	
	<Button 
		android:id="@+id/bt_delete_app_cancel"		
		android:layout_marginLeft="5px"
		android:text="Không"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#84251f"	
		android:background="@drawable/button_dialog1"	
	/>	
</LinearLayout>	
</LinearLayout>
