<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout android:layout_width="1024px" xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="600px" android:background="@drawable/wallpaper_color_07"
		android:orientation="horizontal" android:id="@+id/root">
		<LinearLayout android:id="@+id/layout_2"
			android:layout_width="1024px" android:layout_height="600px"
			android:orientation="vertical">

			<!-- Btn_Function -->
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="50px" android:orientation="horizontal">
				<LinearLayout android:layout_width="240px"
					android:layout_height="50px" android:orientation="horizontal"
					android:gravity="center_vertical|center_horizontal">

				</LinearLayout>
				<LinearLayout android:layout_width="544px"
					android:layout_height="50px" android:orientation="horizontal"
					android:gravity="center_vertical|center_horizontal">

					<TextView android:id="@+id/txt_month"
							android:layout_width="fill_parent" android:layout_height="wrap_content"
							android:textSize="42px" android:text="12/2010" android:gravity="center"
							android:paddingRight="20px" android:textColor="#fff"
							android:textStyle="bold" />
				</LinearLayout>
				<LinearLayout android:layout_width="240px"
					android:layout_height="50px" android:orientation="horizontal"
					android:gravity="center_vertical|center_horizontal">

				</LinearLayout>

			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:background="@drawable/leftside_background"
				android:orientation="horizontal">
				<!-- LeftSide -->
				<LinearLayout android:layout_width="240px"
					android:layout_height="fill_parent" android:background="@drawable/leftside_background"
					android:orientation="vertical" android:gravity="center_horizontal">
					<TextView android:id="@+id/txt_left_day"
						android:layout_width="240px" android:layout_height="wrap_content"
						android:textColor="#fff" android:text="Chủ nhật"
						android:gravity="center_vertical|center_horizontal"
						android:textSize="26px" android:textStyle="bold"
						android:paddingTop="5px" />
					<ImageView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:src="@drawable/leftside_seperator" />
					<TextView android:id="@+id/txt_left_date"
						android:layout_width="240px" android:layout_height="wrap_content"
						android:textColor="#fff" android:text="24"
						android:gravity="center_vertical|center_horizontal"
						android:textSize="150px" android:textStyle="bold"
						android:layout_marginTop="-40px" />
					<ImageView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:src="@drawable/leftside_seperator"
						android:layout_marginTop="-30px" />

					<!-- Am Lich-->

					<LinearLayout android:layout_width="240px"
						android:layout_height="wrap_content" android:orientation="horizontal">
						<LinearLayout android:layout_width="120px"
							android:layout_height="wrap_content" android:orientation="vertical">
							<TextView android:id="@+id/txt_left_datelunar_number"
								android:layout_width="120px" android:layout_height="wrap_content"
								android:textColor="#fff" android:text="Ngày 3"
								android:gravity="center_vertical|center_horizontal"
								android:textStyle="bold" />
							<TextView android:id="@+id/txt_left_datelunar"
								android:layout_width="120px" android:layout_height="wrap_content"
								android:textColor="#fff" android:text="Bính Tuất"
								android:gravity="center_vertical|center_horizontal" />
						</LinearLayout>
						<LinearLayout android:layout_width="120px"
							android:layout_height="wrap_content" android:orientation="vertical">
							<TextView android:id="@+id/txt_left_monthlunar_number"
								android:layout_width="120px" android:layout_height="wrap_content"
								android:textColor="#fff" android:text="Tháng 8"
								android:gravity="center_vertical|center_horizontal"
								android:textStyle="bold" />
							<TextView android:id="@+id/txt_left_monthlunar"
								android:layout_width="120px" android:layout_height="wrap_content"
								android:textColor="#fff" android:text="Canh Dần"
								android:gravity="center_vertical|center_horizontal" />
						</LinearLayout>
					</LinearLayout>

					<ImageView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:src="@drawable/leftside_seperator" />

					<!-- Ngay Tot Xau -->
					<ScrollView android:layout_width="240px"
						android:layout_height="230px">
						<LinearLayout android:layout_width="240px"
							android:layout_height="wrap_content" android:orientation="vertical">
							<TextView android:id="@+id/txt_left_specialday"
								android:layout_width="240px" android:layout_height="wrap_content"
								android:textColor="#fff" android:text="Ngày Quốc Tế Phụ Nữ"
								android:gravity="center_vertical|center_horizontal"
								android:textSize="18px" android:textStyle="bold"
								android:visibility="gone"/>
							<TextView android:id="@+id/txt_left_specialday_lunar"
								android:layout_width="240px" android:layout_height="wrap_content"
								android:textColor="#fff" android:text="Tiết Thanh Minh"
								android:gravity="center_vertical|center_horizontal"
								android:textSize="18px" android:textStyle="bold"
								android:visibility="gone"/>
							<TextView android:id="@+id/txt_left_lichxuathanh" android:layout_width="240px"
								android:layout_height="wrap_content" android:textColor="#fff"
								android:text="Xuất hành tốt, có quý nhân phù trợ, tàu xe thông suốt, thưa kiện có lý phải"
								android:paddingLeft="10px" android:textSize="16px"
								android:lineSpacingExtra="2px" android:layout_marginTop="10px"/>
						</LinearLayout>
					</ScrollView>
					<Button android:id="@+id/btn_addevent" android:layout_width="109px"
						android:layout_height="24px" android:background="@drawable/leftside_add_button"
						android:layout_marginTop="10px" />
				</LinearLayout>
				<!-- RightSide -->
				
					
				<!-- Month -->
				<Gallery android:layout_marginLeft="1px" android:gravity="top"
					android:id="@+id/galweek" android:layout_width="770px"
					android:layout_height="fill_parent" android:scrollbars="none"
					android:fadingEdge="none" android:layout_marginTop="4px"
					android:unselectedAlpha="1"
					android:spacing="0px" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>