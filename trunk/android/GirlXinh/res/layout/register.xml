<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:gravity="center_vertical|center_horizontal"
	android:padding="10dip">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:gravity="center_vertical|center_horizontal"
		android:background="@drawable/btnnc" android:padding="20dip">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<TextView android:id="@+id/txt_username"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="10dip" android:text="@string/user_name"
				android:textColor="#fff" android:textSize="14dip" android:textStyle="bold" />
			<EditText android:id="@+id/edt_username"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_margin="5dip" android:paddingLeft="5dip"
				android:singleLine="true" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<TextView android:id="@+id/txt_password"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="10dip" android:text="@string/password"
				android:textColor="#fff" android:textSize="14dip" android:textStyle="bold" />
			<EditText android:id="@+id/edt_password"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_margin="5dip" android:paddingLeft="5dip"
				android:password="true" android:singleLine="true" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<TextView android:id="@+id/txt_re_password"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_marginLeft="10dip" android:text="@string/re_password"
				android:textColor="#fff" android:textSize="14dip" android:textStyle="bold" />
			<EditText android:id="@+id/edt_re_password"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:singleLine="true" android:layout_margin="5dip"
				android:paddingLeft="5dip" android:password="true" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="horizontal">
			<CheckBox android:id="@+id/chk_accept_rule"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<TextView android:id="@+id/txt_accept_rule"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginLeft="10dip" android:text="@string/accept_rule"
				android:textColor="#fff" android:textSize="14dip" android:textStyle="bold" />
		</LinearLayout>


		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_marginTop="10dip"
			android:gravity="center_horizontal">
			<Button android:id="@+id/btn_register" android:layout_width="100dip"
				android:layout_height="45dip" android:text="@string/register"
				android:textColor="#fff" android:layout_margin="10dip"
				android:textSize="16dip" android:textStyle="bold"
				android:background="@drawable/btnnc" />
			<Button android:id="@+id/btn_cancel" android:layout_width="100dip"
				android:layout_height="45dip" android:text="@string/cancel"
				android:textColor="#fff" android:layout_margin="10dip"
				android:textSize="16dip" android:textStyle="bold"
				android:background="@drawable/btnnc" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
