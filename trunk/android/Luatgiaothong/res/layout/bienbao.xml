<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/bienbao" android:orientation="vertical"
	android:layout_width="match_parent" android:background="@drawable/bg_320"
	android:layout_height="fill_parent">

	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/header1" android:background="@drawable/nav_bar"
		android:layout_height="wrap_content">

		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical" android:layout_weight="2"
			android:layout_height="49dip">
			<Button android:text="Quay lại" android:id="@+id/back"
				android:textSize="15dip" android:background="@drawable/quay_lai_button"
				android:textColor="#fff" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="5dip"/>

		</LinearLayout>
		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical|center_horizontal"
			android:layout_weight="3" android:layout_height="49dip">
			<TextView android:text="Biển báo" android:id="@+id/loaibientext"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:textSize="25dip" android:textColor="#FFF" />
		</LinearLayout>
		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical|right" android:layout_weight="2"
			android:layout_height="49dip">

			<Button android:text="Xem dạng list" android:id="@+id/viewmode"
				android:textColor="#000" android:background="@drawable/danhsach"
				android:textSize="12dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginRight="2dip"/>


		</LinearLayout>


	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"

		android:gravity="center_vertical" android:id="@+id/linsearch"
		android:background="@drawable/option_bar" android:layout_height="49dip">
		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical" android:layout_weight="1"
			android:layout_height="49dip">
			<Button android:text="Tất cả" android:background="@drawable/option_choice"
				android:id="@+id/select" android:layout_width="fill_parent"
				android:textColor="#fff" android:textStyle="bold"
				android:layout_height="wrap_content" android:layout_marginLeft="2dip" />

		</LinearLayout>
		<LinearLayout android:layout_width="0dip" android:id="@+id/linsearch1"
		    android:visibility="invisible"
			android:background="@drawable/search_input" 
			android:gravity="center_horizontal|center_vertical"
			android:layout_weight="2" android:layout_height="wrap_content"
			android:layout_marginLeft="2dip">
			<LinearLayout android:layout_width="wrap_content"
				android:focusable="true" android:focusableInTouchMode="true"
				android:layout_height="wrap_content">
				<EditText android:id="@+id/edit" android:text=""
					android:hint="            tìm kiếm         "  
					android:background="#00000000"
					android:layout_height="25dip" android:layout_width="fill_parent"
					android:layout_marginLeft="10dip" android:layout_marginRight="25dip"></EditText>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>


	<LinearLayout android:layout_width="fill_parent"
		android:visibility="gone" android:id="@+id/detailbienbao"
		android:orientation="vertical" android:background="#fff"
		android:gravity="center_vertical" android:layout_height="fill_parent">

	</LinearLayout>



	<LinearLayout android:layout_width="fill_parent"
		android:visibility="gone" android:id="@+id/linviewinglist"
		android:orientation="vertical" android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:id="@+id/idtitle" android:background="@drawable/section_bg"
			android:layout_height="24dip">
			<TextView android:layout_width="200dip" android:textSize="15dip"
				android:layout_height="wrap_content" android:id="@+id/textheader"
				android:textColor="#FFF" android:textStyle="bold" android:text="Tất cả"
				android:layout_marginLeft="20dip"></TextView>
		</LinearLayout>

		<ListView android:layout_width="fill_parent"

			android:layout_height="fill_parent" android:id="@+id/list1">
		</ListView>
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:visibility="visible" android:id="@+id/linviewinggrid"
		android:orientation="vertical" android:layout_height="fill_parent">
		<!-- <GridView android:id="@+id/gridview" android:layout_width="fill_parent" 
			android:listSelector="@android:color/transparent" android:columnWidth="80dp" 
			android:numColumns="3" android:verticalSpacing="18dp" android:horizontalSpacing="5dp" 
			android:stretchMode="columnWidth" android:gravity="center" android:layout_height="fill_parent" 
			android:layout_marginTop="5dip" android:layout_marginBottom="15dip"/> -->

	</LinearLayout>


</LinearLayout>
