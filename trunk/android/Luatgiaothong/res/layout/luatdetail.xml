<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:background="@drawable/bg_320" android:layout_height="fill_parent">

	<LinearLayout android:layout_width="fill_parent"
		android:background="@drawable/nav_bar" android:layout_height="wrap_content">

		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical" android:layout_weight="2"
			android:layout_height="49dip">
			<Button android:text="Quay lại" android:id="@+id/back"
				android:textSize="15dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:background="@drawable/quay_lai_button"
				android:layout_marginLeft="5dip" android:textColor="#FFF"></Button>

		</LinearLayout>
		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical|center_horizontal"
			android:layout_weight="3" android:layout_height="49dip">
			<TextView android:text="Chương x" android:id="@+id/chuong"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:textSize="25dip" android:textColor="#FFF" />
		</LinearLayout>
		<LinearLayout android:layout_width="0dip"
			android:layout_weight="2" android:layout_height="49dip">

		</LinearLayout>


	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:background="@drawable/option_bar" android:layout_height="49dip">
		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical" android:layout_weight="2"
			android:layout_height="49dip">
			<Button android:text="Trước" android:id="@+id/truoc"
				android:textSize="17dip" android:layout_width="wrap_content"
				android:background="@drawable/truoc" android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"></Button>

		</LinearLayout>
		<LinearLayout android:layout_width="0dip"
			android:gravity="center_horizontal|center_vertical"
			android:layout_weight="3" android:layout_height="49dip">
			<TextView android:text="Điều x" android:id="@+id/dieu"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:textSize="25dip" android:textColor="#FFF" />
		</LinearLayout>
		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical|right" android:layout_weight="2"
			android:layout_height="49dip" gravity="right">
			<Button android:text="Tiếp" android:background="@drawable/tiep"
				android:textSize="17dip" android:id="@+id/tiep"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginRight="5dip"></Button>

		</LinearLayout>
	</LinearLayout>

		<LinearLayout android:layout_width="fill_parent" android:id="@+id/scroll"
		android:orientation="vertical" android:layout_height="fill_parent">
	     </LinearLayout>

	<!--
		<WebView android:id="@+id/webview" android:layout_width="match_parent"
		android:layout_height="match_parent"></WebView>
	-->
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="49dip">

	</LinearLayout>

</LinearLayout>
