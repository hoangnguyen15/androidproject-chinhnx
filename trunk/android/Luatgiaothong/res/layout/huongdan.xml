<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
		<LinearLayout android:id="@+id/linearLayout1"
		android:orientation="horizontal" android:background="@drawable/nav_bar"
		android:gravity="center" android:layout_width="match_parent"
		android:layout_height="49dip">
		<LinearLayout android:layout_width="0dip" android:gravity="center_vertical"
			android:layout_weight="1" android:layout_height="fill_parent">
			<Button android:layout_height="wrap_content" android:id="@+id/back"
				android:textSize="15dip" android:background="@drawable/quay_lai_button"
				android:layout_width="wrap_content" android:text="Quay lại"
				android:textColor="#fff" android:layout_marginLeft="5dip"></Button>
		</LinearLayout>
		<LinearLayout android:layout_width="0dip" android:gravity="center_vertical"
			android:layout_weight="4" android:layout_height="fill_parent">
			<TextView android:text="Hướng dẫn sử dụng" android:id="@+id/textView1"
				android:textSize="25dip" android:layout_width="wrap_content"
				android:textColor="#fff" android:layout_height="wrap_content" android:layout_marginLeft="15dip"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical">
		<ScrollView android:layout_height="match_parent"
			android:background="@drawable/table_cell" android:id="@+id/cuon"
			android:fadingEdgeLength="0dip" android:layout_width="match_parent">
			<LinearLayout android:layout_width="match_parent"
				android:orientation="vertical" android:id="@+id/linearLayout1"
				android:layout_height="match_parent">
				<TextView android:text="TextView" android:id="@+id/content"
					android:textColor="#000" android:textSize="17dip"

					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
					android:layout_marginTop="2dip" android:layout_marginBottom="5dip"></TextView>
				<TextView android:text="" android:id="@+id/content1"
					android:textColor="#000" android:textSize="17dip"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
					android:layout_marginTop="2dip" android:layout_marginBottom="5dip"></TextView>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>




</LinearLayout>
