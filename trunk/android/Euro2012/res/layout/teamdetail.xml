<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/bgtop"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnBack" android:layout_marginTop="3dip"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/btnback" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/teamdetail"
            android:textColor="#fff" android:textStyle="bold"
            android:textSize="20dip"
            android:layout_marginLeft="-70dip"/>
    </LinearLayout>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" 
        android:layout_margin="10dip" android:background="@drawable/bgwhite">
    	
    	<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
    	    android:scrollbars="none">
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:orientation="vertical" >
	        
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="80dip"
		        android:gravity="center" android:layout_margin="10dip"
		        android:orientation="horizontal" >
		        <ImageView android:layout_width="0dip" android:layout_height="fill_parent"
		            android:id="@+id/imgflag" android:layout_weight="2"
		            android:src="@drawable/engl"/>
		        <LinearLayout android:layout_width="0dip" android:layout_height="fill_parent"
		            android:layout_weight="3" android:orientation="vertical" 
		            android:layout_marginLeft="10dip">
		            <TextView android:layout_width="fill_parent"
			            android:layout_height="wrap_content" android:textStyle="bold"
			            android:id="@+id/txtteam" android:text="@string/name"
			            android:textSize="20dip" android:textColor="#333"
			            android:gravity="center_vertical" android:paddingLeft="10dip" />
		            <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
		                android:gravity="center" android:layout_marginTop="5dip">
		                <ImageView android:layout_width="0dip" android:layout_height="fill_parent"
		                    android:id="@+id/imguniform1" android:src="@drawable/ao_england1"
		                    android:layout_weight="1" android:layout_marginRight="6dip"
		                    android:background="#eee"/>
		                <ImageView android:layout_width="0dip" android:layout_height="fill_parent"
		                    android:id="@+id/imguniform2" android:src="@drawable/ao_england2"
		                    android:layout_weight="1" android:background="#eee"/>
		            </LinearLayout>
		        </LinearLayout>
			</LinearLayout>
	        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
	            android:id="@+id/txtestyear" android:textColor="#000"
	            android:text="@string/estimate" android:padding="10dip"/>
	        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
	            android:id="@+id/txtfifajoin" android:textColor="#000"
	            android:text="@string/fifajoin" android:padding="10dip"/>
	        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
	            android:id="@+id/txtfifarank" android:textColor="#000"
	            android:text="@string/fifarank" android:padding="10dip"/>
	        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
	            android:id="@+id/txtcoach" android:textColor="#000"
	            android:text="@string/coach" android:padding="10dip"/>
	        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
	            android:id="@+id/txtattend" android:textColor="#000"
	            android:text="@string/attend" android:padding="10dip"/>
	        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/description"
	            android:textColor="#000" android:paddingLeft="10dip"
	            android:paddingTop="10dip"/>
	        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/testdes"
	            android:textColor="#333" android:id="@+id/txtdesc"
	            android:padding="10dip"
	            android:textSize="12dip"/>
	        <TextView android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/playerlist"
	            android:textColor="#333"
	            android:padding="10dip"/>
	    	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="1px"
		        android:background="#9eb399"/>
	    	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="37dip"
		        android:background="#e9efe9"
		        android:orientation="horizontal">
	    	    <TextView android:layout_width="0dip"
	    	        android:layout_height="fill_parent"
	    	        android:text="@string/tno"
	    	        android:textColor="#333"
	    	        android:layout_weight="1"
	    	        android:gravity="center_vertical|center_horizontal"/>
	    	    <LinearLayout
			        android:layout_width="1px"
			        android:layout_height="fill_parent"
			        android:background="#9eb399"/>
	    	    <TextView android:layout_width="0dip"
	    	        android:layout_height="fill_parent"
	    	        android:text="@string/name"
	    	        android:textColor="#333"
	    	        android:layout_weight="4"
	    	        android:gravity="center_vertical|center_horizontal"/>
	    	    <LinearLayout
			        android:layout_width="1px"
			        android:layout_height="fill_parent"
			        android:background="#9eb399"/>
	    	    <TextView android:layout_width="0dip"
	    	        android:layout_height="fill_parent"
	    	        android:text="@string/position"
	    	        android:textColor="#333"
	    	        android:layout_weight="2"
	    	        android:gravity="center_vertical|center_horizontal"/>
	    	</LinearLayout>
	    	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="1px"
		        android:background="#9eb399"/>
	    	<LinearLayout
		        android:layout_width="fill_parent" android:id="@+id/lvplayers"
		        android:layout_height="fill_parent"
		        android:gravity="center_horizontal"
		        android:orientation="vertical"/>
			        
		</LinearLayout>
		
		</ScrollView>
	</LinearLayout>
</LinearLayout>