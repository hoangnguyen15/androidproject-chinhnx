<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dip" android:background="#fff"
    android:orientation="horizontal" >
    <TextView android:layout_width="30dip" android:layout_height="47dip"
        android:id="@+id/time" android:text="06'" android:textColor="#000"
        android:gravity="center"/>
	<ImageView android:layout_width="30dip" android:layout_height="47dip"
	    android:id="@+id/type1" android:src="@drawable/goal"/>
	<TextView android:layout_width="0dip" android:layout_height="fill_parent"
	    android:layout_weight="2" android:id="@+id/name"
	    android:gravity="center_vertical|left"
	    android:textStyle="bold" android:textColor="#000"
	    android:text="Messi" android:layout_margin="3dip"/>
	<ImageView android:layout_width="30dip" android:layout_height="47dip"
	    android:id="@+id/type2" android:src="@drawable/teamsactive"/>
</LinearLayout>