<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/bg_dialog_date"  
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:orientation="vertical"
  android:id="@+id/baothuc_root">  
  <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content" 
  	android:orientation="vertical">
  	<TextView
  		android:layout_width="wrap_content"
		android:layout_height="wrap_content"	
		android:textColor="#f1de9a"	    	
		android:text="Thông báo"
		android:textSize="25dip"
		android:layout_marginTop="30dip"
		android:layout_gravity="center_horizontal"/>		
	<TextView
		android:id="@+id/txtnoidung_baothuc"
  		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="day la thong bao"	
		android:textColor="#f1de9a"
	    android:height="150dip"
		android:textSize="20dip"
		android:layout_gravity="center_horizontal"/>		
  </LinearLayout>  
	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	<Button
		android:id="@+id/set_baothuc"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="Chọn"
		android:textColor="#c17601"
		android:background="@drawable/button_dialog1"/>		
	<Button
		android:id="@+id/cancel_baothuc"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textColor="#c17601"
		android:text="Hủy"
		android:background="@drawable/button_dialog1"/>	
	</LinearLayout>	
</LinearLayout>
