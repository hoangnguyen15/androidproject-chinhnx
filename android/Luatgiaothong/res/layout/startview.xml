<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="@drawable/mainbgnew"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<LinearLayout android:id="@+id/linearLayout2"
		android:layout_width="match_parent" android:layout_weight="0.1"
		android:layout_height="0dip" android:orientation="vertical"></LinearLayout>


	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical" android:gravity="center"
		android:layout_height="100dip" android:layout_marginLeft="12dip"
		android:layout_marginRight="12dip">
		<TextView android:layout_width="wrap_content"
			android:textSize="22dip" android:textColor="#fff" android:textStyle="bold"
			android:id="@+id/textView1" android:layout_height="wrap_content"
			android:text="Phần mềm Trắc nghiệm" android:layout_marginLeft="0dip" android:layout_marginTop="10dip"></TextView>
		<TextView android:layout_width="wrap_content"
			android:textStyle="bold" android:textSize="22dip" android:textColor="#fff"
			android:id="@+id/textView2" android:layout_height="wrap_content"
			android:text=" An toàn Giao thông" android:layout_marginLeft="0dip"
			android:layout_marginTop="0dip"></TextView>
	</LinearLayout>
	<LinearLayout android:id="@+id/progress" android:gravity="center_horizontal" 
		android:visibility="visible" android:layout_width="fill_parent"
		android:orientation="vertical" android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/progress" android:layout_height="fill_parent" android:orientation="vertical" android:visibility="visible" android:layout_width="fill_parent" android:gravity="center_horizontal">
			<TextView android:text="Đang tải dữ liệu..." android:id="@+id/textView3" android:layout_height="wrap_content" android:textColor="#fff" android:layout_marginTop="150dip" android:textStyle="bold" android:layout_width="wrap_content"></TextView>
			<ProgressBar android:layout_marginBottom="0dip" android:layout_height="wrap_content" style="@android:style/Widget.ProgressBar.Inverse" android:layout_width="wrap_content"></ProgressBar>
		</LinearLayout>
		
	</LinearLayout>
	<LinearLayout android:id="@+id/buttons"
		android:visibility="gone" android:layout_width="match_parent"
		android:orientation="vertical" android:layout_height="380dip">
		<LinearLayout android:layout_height="wrap_content"
			android:orientation="horizontal" android:id="@+id/linearLayout3"
			android:layout_width="match_parent" android:layout_marginTop="20dip">

			<LinearLayout android:layout_height="match_parent"
				android:layout_width="0dip" android:gravity="center_vertical|right"
				android:layout_weight="1">

				<LinearLayout android:layout_height="80dip"
					android:gravity="center_horizontal" android:background="@drawable/main_option"
					android:id="@+id/baithi" android:layout_width="wrap_content"
					android:orientation="vertical" android:layout_marginRight="5dip" android:layout_marginTop="0dip" android:layout_marginBottom="0dip">
					<ImageView android:layout_height="wrap_content"
						android:id="@+id/imageView1" android:layout_width="wrap_content"
						android:src="@drawable/bai_thi_icon"></ImageView>
					<TextView android:textColor="#fff" android:textStyle="bold"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:text="Thi thử" android:id="@+id/textView4"
						android:layout_marginTop="-25dip"></TextView>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:layout_height="match_parent"

				android:gravity="center_vertical|left" android:layout_weight="1"
				android:layout_width="0dip">
				<LinearLayout android:layout_height="80dip"
					android:gravity="center_horizontal" android:background="@drawable/main_option"
					android:id="@+id/bienbao" android:layout_width="wrap_content"
					android:orientation="vertical" android:layout_marginLeft="5dip" android:layout_marginTop="0dip" android:layout_marginBottom="0dip">
					<ImageView android:layout_height="wrap_content"
						android:id="@+id/imageView2" android:layout_width="wrap_content"
						android:src="@drawable/bien_bao_icon"></ImageView>
					<TextView android:text="Biển báo" android:textColor="#fff"
						android:textStyle="bold" android:id="@+id/textView5"
						android:layout_marginTop="-25dip" android:layout_width="wrap_content"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout android:layout_height="wrap_content"
			android:orientation="horizontal" android:id="@+id/linearLayout3"
			android:layout_width="match_parent">


			<LinearLayout android:layout_height="match_parent"
				android:layout_width="0dip" android:gravity="center_vertical|right"
				android:layout_weight="1">

				<LinearLayout android:layout_height="80dip"
					android:gravity="center_horizontal" android:background="@drawable/main_option"
					android:id="@+id/bode" android:layout_width="wrap_content"
					android:orientation="vertical" android:layout_marginRight="5dip"
					android:layout_marginTop="10dip" android:layout_marginBottom="5dip">
					<ImageView android:layout_height="wrap_content"
						android:id="@+id/imageView3" android:layout_width="wrap_content"
						android:src="@drawable/bo_de_icon"></ImageView>
					<TextView android:text="Bộ đề" android:id="@+id/textView6"
						android:textColor="#fff" android:textStyle="bold"
						android:layout_marginTop="-25dip" android:layout_width="wrap_content"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:layout_height="match_parent"
				android:gravity="center_vertical|left" android:layout_weight="1"
				android:layout_width="0dip">
				<LinearLayout android:layout_height="80dip"
					android:gravity="center_horizontal" android:background="@drawable/main_option"
					android:id="@+id/luat" android:layout_width="wrap_content"
					android:orientation="vertical" android:layout_marginLeft="5dip"
					android:layout_marginTop="10dip" android:layout_marginBottom="5dip">
					<ImageView android:layout_height="wrap_content"
						android:id="@+id/imageView4" android:layout_width="wrap_content"
						android:src="@drawable/luat_icon"></ImageView>
					<TextView android:text="Luật" android:textColor="#fff"
						android:textStyle="bold" android:id="@+id/textView7"
						android:layout_marginTop="-25dip" android:layout_width="wrap_content"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:layout_height="100dip"
			android:orientation="horizontal" android:id="@+id/linearLayout3"
			android:layout_width="match_parent">

			<LinearLayout android:layout_height="90dip"
				android:gravity="center" android:layout_width="fill_parent">
				<LinearLayout android:layout_height="match_parent"
					android:gravity="center_horizontal" android:background="@drawable/main_option"
					android:id="@+id/ketqua" android:layout_width="wrap_content"
					android:orientation="vertical" android:layout_marginLeft="5dip"
					android:layout_marginTop="7dip" android:layout_marginBottom="5dip">
					<ImageView android:layout_height="wrap_content"
						android:id="@+id/imageView5" android:layout_width="wrap_content"
						android:src="@drawable/ket_qua_icon" android:layout_marginTop="0dip"></ImageView>
					<TextView android:text="Kết quả" android:textColor="#fff"
						android:textStyle="bold" android:id="@+id/textView8"
						android:layout_marginTop="-25dip" android:layout_width="wrap_content"
						android:layout_height="wrap_content"></TextView>
				</LinearLayout>
			</LinearLayout>


		</LinearLayout>
	</LinearLayout>
</LinearLayout>

