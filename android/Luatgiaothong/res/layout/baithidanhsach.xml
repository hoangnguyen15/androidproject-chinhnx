<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/baithidanhsach" android:orientation="vertical"
	android:layout_width="match_parent" android:background="@drawable/bg_320"
	android:layout_height="fill_parent">

	<LinearLayout android:layout_width="fill_parent"
		android:background="@drawable/nav_bar" android:layout_height="wrap_content">

		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical" android:layout_weight="2"
			android:layout_height="49dip">
			<Button android:layout_height="wrap_content" android:id="@+id/back"
				android:textSize="15dip" android:background="@drawable/quay_lai_button"
				android:layout_width="wrap_content" android:text="Quay lại"
				android:textColor="#FFF" android:layout_marginLeft="5dip"></Button>

		</LinearLayout>
		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical|center_horizontal"
			android:layout_weight="3" android:layout_height="49dip">
			<TextView android:text="Câu hỏi" android:id="@+id/chuong"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:textSize="25dip" android:textColor="#FFF" />
		</LinearLayout>
		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical|right" android:layout_weight="2"
			android:layout_height="49dip">

		</LinearLayout>


	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:gravity="center_vertical" android:background="@drawable/option_bar"
		android:layout_height="49dip">
		<LinearLayout android:layout_width="0dip"
			android:gravity="center_vertical" android:layout_weight="1"
			android:layout_height="49dip">
			<LinearLayout android:layout_width="fill_parent"
				android:gravity="center_vertical" android:layout_height="fill_parent">
				<LinearLayout android:layout_width="0dip" android:id="@+id/chuatraloi0"
					android:gravity="center_vertical|center_horizontal"
					android:layout_weight="1" android:layout_height="fill_parent">
					<LinearLayout android:layout_width="40dip"
						android:layout_height="fill_parent"></LinearLayout>
					<LinearLayout android:layout_width="0dip" android:id="@+id/chuatraloi"
						android:gravity="center_vertical|center_horizontal"
						android:background="@drawable/option_selected"
						android:layout_weight="2" android:layout_height="wrap_content">
						<TextView android:text="Chưa trả lời" android:id="@+id/textView2"
							android:textColor="#fff" android:textStyle="bold"
							android:textSize="17dip" android:shadowColor="#000"
							android:shadowDx="0" android:shadowDy="-0.5"
							android:shadowRadius="0.5" android:layout_width="wrap_content"
							android:layout_height="wrap_content" android:layout_marginLeft="2dip"
							android:layout_marginRight="2dip"></TextView>

					</LinearLayout>

				</LinearLayout>
				<LinearLayout android:layout_width="0dip" android:id="@+id/datraloi0"
					android:gravity="center_vertical|center_horizontal"
					android:orientation="horizontal" android:layout_weight="1"
					android:layout_height="fill_parent">

					<LinearLayout android:layout_width="0dip" android:id="@+id/datraloi"
						android:gravity="center_vertical|center_horizontal"
						android:layout_weight="2" android:layout_height="wrap_content"
						android:layout_marginLeft="1dip">

						<TextView android:text="Đã trả lời" android:id="@+id/textView1"
							android:textColor="#fff" android:textStyle="bold"
							android:textSize="17dip" android:shadowColor="#000"
							android:shadowDx="0" android:shadowDy="-0.5"
							android:shadowRadius="0.5" android:layout_width="wrap_content"
							android:layout_height="wrap_content"></TextView>

					</LinearLayout>
					<LinearLayout android:layout_width="40dip"
						android:layout_height="fill_parent"></LinearLayout>
				</LinearLayout>



			</LinearLayout>

		</LinearLayout>
	</LinearLayout>


	<LinearLayout android:layout_width="fill_parent"
		android:orientation="vertical" android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/title" android:background="@drawable/chua_tra_loi_section"
			android:gravity="center_vertical" android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView android:text="Chưa trả lời" android:id="@+id/textheader"
				android:textStyle="bold" android:textColor="#fff"
				android:shadowColor="#000" android:shadowDx="0" android:shadowDy="-0.5"
				android:shadowRadius="0.5" android:textSize="17dip"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_marginLeft="15dip"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<ListView android:id="@+id/list" android:fadingEdgeLength="0dip"
				android:layout_height="wrap_content" android:layout_width="match_parent"></ListView>
		</LinearLayout>

	</LinearLayout>
</LinearLayout>
