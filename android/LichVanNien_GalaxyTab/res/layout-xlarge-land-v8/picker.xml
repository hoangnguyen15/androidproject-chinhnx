<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/halftransblack" android:id="@+id/llcontainer">
<LinearLayout
 
  android:orientation="vertical" android:gravity="center_horizontal"
  android:layout_width="500dip" android:background="#000"
  android:layout_marginTop="100dip" android:layout_marginLeft="100dip"  
  android:layout_height="wrap_content" android:id="@+id/llrootpicker">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
		android:layout_marginTop="5dip">
		
		<LinearLayout android:layout_width="100dip" android:layout_height="115dip"
			android:orientation="vertical" android:gravity="center_horizontal">
		
			<Button android:background="@drawable/search_day_plus_button"
				android:text="+" android:textColor="#fff" android:textSize="16dip"
				android:textStyle="bold" android:id="@+id/btnpd"
				android:layout_width="fill_parent" android:layout_height="35dip" />
			<EditText android:layout_width="fill_parent" android:layout_height="0dip"
				android:text="16" android:layout_weight="2"
				android:enabled="false" android:focusable="false"
				android:digits="0123456789" android:singleLine="true" android:maxLength="2"
				android:textSize="40dip" android:background="#000000"
				android:gravity="center" android:textColor="#fff" android:id="@+id/txtdate"/>
			<Button android:background="@drawable/search_day_minus_button"
				android:text="-" android:textColor="#fff" android:textSize="16dip"
				android:textStyle="bold" android:id="@+id/btnmd"
				android:layout_width="fill_parent" android:layout_height="35dip" />
		</LinearLayout>
		
		<TextView android:layout_width="25dip" android:layout_height="wrap_content"
			android:textSize="56dip" android:text="/" android:textStyle="bold"/>
			
		<LinearLayout android:layout_width="110dip" android:layout_height="115dip"
			android:orientation="vertical" android:gravity="center_horizontal">
			
			<Button android:background="@drawable/search_month_plus_button"
				android:text="+" android:textColor="#fff" android:textSize="16dip"
				android:textStyle="bold" android:id="@+id/btnpm"
				android:layout_width="fill_parent" android:layout_height="35dip"/>
			<EditText android:layout_width="fill_parent" android:layout_height="0dip"
				android:text="03" android:layout_weight="2" 
				android:enabled="false" android:focusable="false"
				android:digits="0123456789" android:singleLine="true" android:maxLength="2"
				android:paddingLeft="0dip" android:selectAllOnFocus="true"
				android:textSize="40dip" android:background="#000000"
				android:gravity="center" android:textColor="#fff" android:id="@+id/txtmonth"/>
			<Button android:background="@drawable/search_month_minus_button"
				android:text="-" android:textColor="#fff" android:textSize="16dip"
				android:textStyle="bold" android:id="@+id/btnmm"
				android:layout_width="fill_parent" android:layout_height="35dip"/>	
		</LinearLayout>
		<TextView android:layout_width="26dip" android:layout_height="wrap_content"
			android:textSize="56dip" android:text="/" android:textStyle="bold"/>
		<LinearLayout android:layout_width="175dip" android:layout_height="115dip"
			android:orientation="vertical" android:gravity="center_horizontal">
			
			<Button android:background="@drawable/search_year_plus_button"
				android:text="+" android:textColor="#fff" android:textSize="16dip"
				android:textStyle="bold" android:id="@+id/btnpy"
				android:layout_width="fill_parent" android:layout_height="35dip"/>
			<EditText android:layout_width="fill_parent" android:layout_height="0dip"
				android:text="1987" android:layout_weight="2"
				android:selectAllOnFocus="true" android:enabled="false" android:focusable="false"
				android:digits="0123456789" android:singleLine="true" android:maxLength="4"
				android:paddingLeft="0dip" android:inputType="number"
				android:textSize="40dip" android:background="#000000"
				android:gravity="center" android:textColor="#fff" android:id="@+id/txtyear"/>
			<Button android:background="@drawable/search_year_minus_button"
				android:text="-" android:textColor="#fff" android:textSize="16dip"
				android:textStyle="bold" android:id="@+id/btnmy"
				android:layout_width="fill_parent" android:layout_height="35dip"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="40dip"
		android:gravity="center" android:layout_marginTop="10dip" android:orientation="vertical">
		<Button android:id="@+id/btnamduong" android:layout_width="308dip" 
			android:layout_height="25dip" android:background="@drawable/toogle_button"/>
	    <LinearLayout android:layout_width="308dip" android:layout_height="wrap_content"
	    	android:layout_marginTop="-20dip">
	    
	    	<TextView android:layout_width="0dip" android:layout_height="wrap_content"
	    		android:text="@string/amlich" android:textColor="#888"
	    		android:layout_weight="1" android:gravity="center"
	    		android:textSize="14dip" android:textStyle="bold"/>
	    	<TextView android:layout_width="0dip" android:layout_height="wrap_content"
	    		android:text="@string/duonglich" android:textColor="#888"
	    		android:layout_weight="1" android:gravity="center"
	    		android:textSize="14dip" android:textStyle="bold"/>
	    </LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
	
	<Button android:layout_width="142dip" android:layout_height="50dip" 
		android:layout_marginTop="15dip" android:layout_marginBottom="15dip"
		android:background="@drawable/btndarkgray" android:text="@string/timkiem"
		android:textColor="#fff" android:id="@+id/btnsearch"
		android:textStyle="bold"/>
	<Button android:layout_width="142dip" android:layout_height="50dip" 
		android:layout_marginTop="15dip" android:layout_marginBottom="15dip"
		android:background="@drawable/btndarkgray" android:text="@string/dong"
		android:textColor="#fff" android:id="@+id/btnclose"
		android:textStyle="bold"/>
	</LinearLayout>
</LinearLayout>
</LinearLayout>