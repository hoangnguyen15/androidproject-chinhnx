<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="37dip"
    android:orientation="horizontal"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
		android:gravity="center_vertical|center_horizontal">
        <TextView
            android:id="@+id/txtsday"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:text="08/06"
            android:textColor="#333333"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="12dip"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/txtstime"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:text="16:00"
            android:textColor="#333333"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="12dip"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="#9fb39a">
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal" >
		<TextView
		    android:id="@+id/txtsteam1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:text="Poland"
            android:textColor="#333333"
            android:layout_weight="3" 
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:textSize="10dip"/>  
        <ImageView 
            android:id="@+id/imgsflag1"
            android:layout_width="20dip"
            android:layout_height="20dip"
            />
		<TextView
		    android:id="@+id/txtsratio"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:text="10-10"
            android:textColor="#f00"
            android:layout_weight="3" 
            android:gravity="center_vertical|center_horizontal"
            android:textSize="10dip"/>
		<ImageView 
		    android:id="@+id/imgsflag2"
		    android:layout_width="20dip"
            android:layout_height="20dip"
            />
		<TextView
		    android:id="@+id/txtsteam2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:text="Poland"
            android:textColor="#333333"
            android:layout_weight="3" 
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:textSize="10dip"/>        
        
    </LinearLayout>
	<LinearLayout
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:background="#9fb39a">
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/llmatchdetail"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal" >
	    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icongo" />
	</LinearLayout>
        

</LinearLayout>