<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/bg_dialog_date"  
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:orientation="vertical"
  android:id="@+id/baothuc_root">  
  <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content" 
  	android:orientation="vertical"
  	>
  	<TextView
  		android:layout_width="wrap_content"
		android:layout_height="wrap_content"	
		android:textColor="#f1de9a"	    	
		android:text="Thông báo"
		android:textSize="25px"
		android:layout_marginTop="25px"
		android:layout_gravity="center_horizontal"
		
		/>		
	<TextView
		android:id="@+id/txtnoidung_baothuc"
  		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="5px"
		android:text="day la thong bao dfdareradf ererfg yr6rtwetqetwy tyeyeyt"	
		android:textColor="#f1de9a"
	    android:height="150px"
		android:textSize="20px"
		android:layout_marginLeft="20px"	
		android:layout_marginTop="10px"	
		android:layout_gravity="center_horizontal"
		/>		
  </LinearLayout>  
	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:layout_marginTop="30px">
	<Button
		android:id="@+id/set_baothuc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Chọn"
		android:textColor="#c17601"
		android:background="@drawable/button_dialog1"
		android:layout_marginLeft="15px"/>		
	<Button
		android:id="@+id/cancel_baothuc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#c17601"
		android:text="Hủy"
		android:background="@drawable/button_dialog1"
		/>	
	</LinearLayout>	
</LinearLayout>
